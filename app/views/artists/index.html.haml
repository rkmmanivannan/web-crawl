= render 'layouts/header'
%p#notice= notice
%h1 Artists
%table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @artists.each do |artist|
      %tr
        %td= artist.name
        %td= link_to 'Show', artist
        %td= link_to 'Edit', edit_artist_path(artist)
        %td= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' }
%br/
- if user_signed_in?
  %li
    = link_to('Logout', destroy_user_session_path, :method => :delete)
    = current_user.email
- else
  %li
    = link_to('Login', new_user_session_path)
%br/
= link_to 'New Artist', new_artist_path
